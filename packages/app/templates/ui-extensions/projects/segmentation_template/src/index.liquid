import React from 'react';
import {extend, render, Button, TextBlock, SegmentationTemplate, useExtensionApi} from '@shopify/admin-ui-extensions-react';

function App() {
  const api = useExtensionApi();

  const metafield = "";
  const query = "YOUR TEMPLATE QUERY";

  // This extension contains two examples: one with existing UI primitives (TextBlock + Button) and another one with a custom component

  return (
    <>
      <TextBlock size="medium" variation="subdued">YOUR TEMPLATE TITLE</TextBlock>
      <TextBlock size="base">{query}</TextBlock>
      <Button
        title="Use this template"
        primary
        onPress={() => api?.onUseTemplate?.(query, metafield)}
        disabled={false}
      />
      <SegmentationTemplate
        localizedTitle=""
        localizedDescription=""
        polarisIcon="AbandonedCartMajor"
        tokens={[]}
        qlQuery=""
        metafieldDependencies={[]}
        // https://shopify.dev/apps/metafields/definitions/standard
        standardMetafieldDependencies={[]}
      />
    </>
  );
}

extend(
  'Customers::Templates::Render',
  render(() => <App />),
);
