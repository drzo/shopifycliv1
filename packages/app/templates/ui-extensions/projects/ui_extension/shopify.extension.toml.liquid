api_version = "2022-10"

[capabilities]
api_access = true
network_access = true
block_progress = true

[[extensions]]
type = "ui_extension"
name = "{{ name }}"
handle = "{{ handle }}"

[[extensions.targeting]]
module = "./src/CheckoutDynamicRender.{{ srcFileExtension }}"
target = "Checkout::Dynamic::Render"

